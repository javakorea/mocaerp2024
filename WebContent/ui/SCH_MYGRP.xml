<!-- 2번 -->
			<xf:group class="dfbox" id="" style="">
				<xf:group class="fl" id="" style="">
					<w2:textbox class="" id="txt_title_mychin" label="- 채널별구독자목록" style="font-size:16px;margin-top:8px"></w2:textbox>
				</xf:group>			
				<xf:group class="fr" id="" style="">
